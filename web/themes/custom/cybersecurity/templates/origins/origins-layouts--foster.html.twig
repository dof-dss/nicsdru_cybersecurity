{% if content %}
  <section class="ag_wrapper tw-bg-highlight tw-w-full tw-my-8 md-tw-my-12 tw-py-8 md-tw-pt-16 clearfix">
    <div class="container">
      <div {{ attributes.addClass(settings.extra_classes) }}>
        {% if content.title %}
          {{ content.title }}
        {% endif %}
        <div class="ag_layout layout__region--left left">
          {{ content.left }}
        </div>
        <div class="ag_layout layout__region--center left">
          {{ content.center }}
        </div>
        <div class="ag_layout layout__region--right left">
          {{ content.right }}
        </div>
      </div>
    </div>
  </section>
{%  endif %}
{% block regions %}

{% endblock %}
