{
  "name": "npm_theme_builder",
  "version": "1.0.0",
  "description": "A package of utilities used to compile scss and js",
  "main": "index.js",
  "devDependencies": {
    "autoprefixer": "^9.1.0",
    "cross-env": "^5.2.0",
    "laravel-mix": "^5.0.0",
    "node-sass": "^4.9.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^4.1.0",
    "postcss-cli": "^6.0.0",
    "sass-lint": "^1.12.1",
    "tailwindcss": "^1.0.1",
    "uglify-js": "^3.4.6"
  },
  "scripts": {
    "//": "Utility scripts - where we build or run multiple scripts either concurrently or similtaneously",
    "uglify": "mkdir -p js && uglifyjs src/js/*.js -m -o js/scripts.js",
    "scss:dev": "node-sass --output-style expanded -o css src/scss",
    "scss:prod": "node-sass --output-style compressed -o css src/scss",
    "autoprefixer": "postcss -u autoprefixer -r css/*",
    "sasslint": "sass-lint -c .sass-lint.yml 'src/scss/**/*.scss' -v -q",
    "lint": "npm run sasslint",
    "build": "npm run build:css && npm run build:js",
    "build:css": "npm run sasslint && npm run scss:prod && npm run autoprefixer",
    "build:js": "npm run uglify",
    "watch:scss": "onchange 'src/scss/**/*.scss' -- npm run scss:dev",
    "watch:js": "onchange 'src/js/*.js' -- npm run build:js",
    "watch": "npm-run-all --parallel watch:scss watch:js",
    "tw-build": "npm run dev",
    "tw-dev": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "tw-development": "npm run dev",
    "tw-watch": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js"
  },
  "author": "David.Corbett@finance-ni.gov.uk"
}
